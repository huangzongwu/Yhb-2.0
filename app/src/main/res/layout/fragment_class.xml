<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fei.yhb_20.ui.fragment.ClassFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/class0" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门标签" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:background="@color/color_gray_light"
                android:id="@+id/gv_class_0"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/class1" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:background="@color/color_gray_light"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:id="@+id/gv_class_1"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/class2" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活娱乐" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:background="@color/color_gray_light"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:id="@+id/gv_class_2"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/class3" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:background="@color/color_gray_light"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:id="@+id/gv_class_3"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</FrameLayout>
