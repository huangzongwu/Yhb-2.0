<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/color_gray_light"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_merchantName"/>
            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下很多人喜欢了"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="0.2"
                    android:src="@drawable/pull_scroll_view_avatar_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_main_logo"/>
                <LinearLayout
                    android:layout_weight="0.6"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_main_postName"
                        android:text="default name"/>
                    <TextView
                        android:id="@+id/tv_main_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="default time"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:id="@+id/iv_main_share"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dropdown_gray"
                    android:id="@+id/iv_main_list"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_main_content"
                android:paddingTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="this is the content"/>
            <HorizontalScrollView
                android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:layout_gravity="center_vertical"
                android:fillViewport="false" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_gallery"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_main_shared"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/iv_main_shared"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumbs_up"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_main_shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我享受过"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_main_like"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/iv_main_like"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_heart"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_main_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜欢"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_main_dislike"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/iv_main_dislike"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dislike"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_main_dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="没有帮助"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_main_conment"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/iv_main_comment"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_chat"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_main_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>