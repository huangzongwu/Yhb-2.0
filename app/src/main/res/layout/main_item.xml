<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="6dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="0.1"
                    android:src="@drawable/avatar"
                    android:layout_width="45dp"
                    android:layout_height="51dp"
                    android:id="@+id/iv_main_logo"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_main_postName"
                        android:text="default name"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_main_time"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="default time"/>
                        <TextView
                            android:textColor="#ffffff"
                            android:background="@drawable/lable_background"
                            android:id="@+id/tv_main_merchantName"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商户名"/>
                        </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:id="@+id/iv_main_share"/>

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top"
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dropdown_gray"
                    android:id="@+id/iv_main_list"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_main_content"
                android:paddingTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="this is the content"/>
            <HorizontalScrollView
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:layout_gravity="center_vertical"
                android:fillViewport="false" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_gallery"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:background="@color/color_gray_light"
                android:layout_width="match_parent"
                android:layout_height="0.3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/ll_main_like"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp">

                <ImageView
                        android:id="@+id/iv_main_like"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_heart"/>
                    <TextView
                        android:id="@+id/tv_main_like"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>

                </LinearLayout>

                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_gray_light"
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:id="@+id/ll_main_dislike"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp">

                <ImageView
                        android:id="@+id/iv_main_dislike"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_dislike"/>
                    <TextView
                        android:id="@+id/tv_main_dislike"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>

                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_gray_light"
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:id="@+id/ll_main_conment"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp">

                <ImageView
                        android:id="@+id/iv_main_comment"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_chat"/>
                    <TextView
                        android:id="@+id/tv_main_comment"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>